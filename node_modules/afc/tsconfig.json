{
    "compilerOptions": {
//        "incremental": true,
        "preserveConstEnums": true,
        "outFile": "ressources/afc/js/afc.js",
        "rootDir": "components",
        "sourceMap": true,
        "target": "ES2020",
        "declaration": true,
        "stripInternal": true,
//        "strict": true,
        "removeComments": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
//        "strictFunctionTypes": true,
        "skipLibCheck": true,
        /*"compileOnSave": true,
        "lib": ["DOM","ES2017"],*/
        "typeRoots": [
              "./node_modules/@types"
        ],
        "alwaysStrict": true,
        "experimentalDecorators": true
    },
    "include": [
        "components/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "nbprojects"
    ]
}
